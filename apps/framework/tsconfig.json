{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "types": ["bun-types"],
    "target": "ES2015",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "paths": {
      "@app/*": ["./src/app/*"],
      "@config/*": ["./src/config/*"],
      "@database/*": ["./src/database/*"],
      "@generators/*": ["./bin/internals/generators/*"],
      "@scripts/*": ["./bin/scripts/*"],
      "@src/*": ["./src/*"],
      "@utils/*": ["./src/utils/*"]
    }
  }
}
